    """
    _pub_style()
    fig, axes = plt.subplots(1, 2, figsize=(12.5, 4.6), sharey=True)
    for ax, comp_df, title in zip(
        axes,
        [compA.loc[ALT_ORDER, METHOD_ORDER], compB.loc[ALT_ORDER, METHOD_ORDER]],
