def _annotate_bars(ax, bars):
    """Put 2-dec labels above bars; add a star on the tallest bar per x-group."""
    # Find group maxima by x-center
    by_x = {}
    for b in bars:
        x = b.get_x() + b.get_width()/2
        by_x.setdefault(round(x, 6), []).append(b)

    for x, group in by_x.items():
        # label each bar
        tops = [g.get_height() for g in group]
        for g in group:
            h = g.get_height()
            ax.annotate(f"{h:.2f}",
                        (g.get_x()+g.get_width()/2, h),
                        xytext=(0, 3), textcoords="offset points",
                        ha="center", va="bottom", fontsize=12, color="black") # Adjusted fontsize here
        # star on best
        k = int(np.argmax(tops))
        g_star = group[k]
        ax.annotate("",
                    (g_star.get_x()+g_star.get_width()/2, g_star.get_height()),
                    xytext=(0, 10), textcoords="offset points",
                    ha="center", va="bottom", fontsize=14, color="black") # Adjusted fontsize here

def plot_rc_bars(comp_df, scenario_label, fname, highlight=M_PROP):
    """
    Grouped bar chart of RC by method × alternative.
    - Color + hatch per method
    - Star marks best method per alternative
    - Proposed method outlined for emphasis
    """
    _pub_style()
    df = comp_df.loc[ALT_ORDER, METHOD_ORDER]
    A, M = df.shape
    x = np.arange(A)
    width = 0.17
    gap = 0.04

    fig, ax = plt.subplots(figsize=(8.8, 4.8))
    all_bars = []
    for k, method in enumerate(METHOD_ORDER):
        offs = (k - (M - 1) / 2.0) * (width + gap)
        vals = df[method].to_numpy()
        bars = ax.bar(
            x + offs, vals, width,
            label=method,
            color=PALETTE[method],
            edgecolor="black",
            linewidth=0.9 if method != highlight else 1.4,
            hatch=HATCHES[method],
            zorder=3,
            alpha=0.95 if method != highlight else 1.0
        )
        all_bars.extend(bars)

        # Optional: add slim black markers (useful in grayscale)
        ax.plot(x + offs, vals, "o", ms=2.5, color="black", zorder=4)

    _annotate_bars(ax, all_bars)

    ax.set_title(scenario_label) # Use the scenario_label directly as the title
   # ax.set_xlabel("Alternative")
    ax.set_ylabel("RC (0–1)", fontweight='bold', color='black', fontsize=14) # Make Y-axis label bold, black, and bigger

    ax.set_ylim(0, 1.0)
    ax.set_xticks(x)
    #ax.set_xticklabels(ALT_ORDER)
    # X tick labels: Cambria, bold, pure black
    ax.set_xticklabels(ALT_ORDER, fontsize=14, fontweight='bold', color='black') # Make X-axis tick labels bold, black, and bigger






    # Tidy spines, keep bottom/left
    for s in ("top", "right"):
        ax.spines[s].set_visible(False)

    # Compact, multi-column legend above plot
    leg = ax.legend(
        title="",
        ncols=4,
        loc="upper center",
        bbox_to_anchor=(0.5, 1.18),
        frameon=False,
        handlelength=1.4,
        columnspacing=1.0,
        handletextpad=0.4,
        borderaxespad=0.0
    )
    # Change legend text color to black
    for text in leg.get_texts():
        text.set_color("black")
    # Change legend title color to black
    leg.get_title().set_color("black")


    plt.tight_layout()
    save_figure(fig, fname) # Save the figure
    plt.show()

def plot_rank_heatmap(ranks_df, scenario_label, fname):
    """
    Heatmap of ranks (lower is better).
    Uses reversed palette so rank=1 is darkest (high emphasis).
    """
    _pub_style()
    R = ranks_df.loc[ALT_ORDER, METHOD_ORDER]

    fig, ax = plt.subplots(figsize=(7.8, 3.6))
    # vmin=1; vmax dynamic to number of methods
    vmax = int(np.nanmax(R.to_numpy()))
    cmap = sns.color_palette("light:navy", as_cmap=True)  # aesthetically calm; invert logic with norm
    im = sns.heatmap(
        R, ax=ax,
        annot=True, fmt=".0f",
        cmap="YlGnBu_r",   # reversed so 1 is dark
        vmin=1, vmax=vmax,
        cbar_kws={"shrink": 0.8, "label": "Rank (1 = best)"},
        linewidths=0.5, linecolor="#FFFFFF"
    )
    ax.set_title(f"Ranks by Method — {scenario_label}")
    ax.set_xlabel("Method")
    ax.set_ylabel("Alternative", fontweight='normal', color='black') # Not bold
    # Rotate x labels slightly for readability
    ax.set_xticklabels(ax.get_xticklabels(), rotation=20, ha="right")
    for s in ("top", "right"):
        ax.spines[s].set_visible(False)
    plt.tight_layout()
    save_figure(fig, fname) # Save the figure
    plt.show()

def plot_rc_panels(compA, compB, fname, highlight=M_PROP):
    """
