        ax.set_ylim(0, 1.0)
        ax.set_xticks(x)
        ax.set_xticklabels(ALT_ORDER)
        for s in ("top", "right"):
            ax.spines[s].set_visible(False)

    axes[0].set_ylabel("RC (0–1)", fontweight='normal', color='black') # Not bold

    # One shared legend for both panels
    handles, labels = axes[0].get_legend_handles_labels()
    fig.legend(
        handles, labels, title="Method",
        ncols=4, loc="upper center", bbox_to_anchor=(0.5, 1.14),
        frameon=False, handlelength=1.4, columnspacing=1.0, handletextpad=0.4
    )
    plt.tight_layout()
    save_figure(fig, fname) # Save the figure
    plt.show()

