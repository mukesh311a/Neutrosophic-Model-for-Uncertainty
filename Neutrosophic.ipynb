        "font.size": 14, # Set font size here
        "axes.labelsize": 14, # Set label size here
        "axes.titlesize": 15, # Set title size here
        "legend.fontsize": 12, # Set legend size here
        "xtick.labelsize": 13, # Set tick label size here
        "ytick.labelsize": 13, # Set tick label size here
    })

